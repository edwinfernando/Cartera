<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cartera.masterkey.cartera.views.fragments.RecaudosRealizadosFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recaudos_realizados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/linearLayout_vertical_edt"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:paddingRight="4dp">

                <TextView
                    style="@style/textView"
                    android:text="@string/cantidad" />

                <TextView
                    android:id="@+id/txtCantidad"
                    style="@style/editText_style"
                    android:layout_height="40dp"
                    android:layout_marginRight="0dp"
                    android:gravity="left|center"
                    android:textColor="#ff000000" />

            </LinearLayout>

            <LinearLayout
                style="@style/linearLayout_vertical_edt"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.3">

                <TextView
                    style="@style/textView"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/txtTotal"
                    style="@style/editText_style"
                    android:background="@drawable/gradient_edit_text"
                    android:layout_height="40dp"
                    android:layout_marginRight="0dp"
                    android:gravity="left|center"
                    android:textColor="#ff000000" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/Button.Peque"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btnImprimir"
                style="@style/SelectableItemBackgroundButtonDark"
                android:src="@drawable/ic_local_printshop_white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
