<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Filter">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- <item name="android:textColor">@android:color/white</item>-->
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <!--             Style of applications            -->

    <style name="Dialog">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrincipal</item>
        <!-- <item name="android:textSize">@dimen/floating_label</item>-->
        <item name="android:titleTextStyle">@style/Dialog</item>
    </style>

    <style name="EditTextWhite" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBoton</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorBoton</item>
    </style>

    <style name="EditTextBlack" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlackAlpha</item>
        <item name="colorControlActivated">@color/colorBlackAlpha2</item>
        <item name="android:textColorHighlight">@color/colorBlackAlpha</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/gradient_boton</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="Button.Peque" parent="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/gradient_boton</item>
        <item name="android:shadowDy">2</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="Button.Formulario" parent="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/gradient_boton</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorBlackAlpha</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemBackgroundButtonDark" parent="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="SelectableItemToolbar" parent="Button">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="layoutStyleBtnProductos" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">@drawable/gradient_boton_azul</item>
    </style>

    <style name="SelectableItemBackgroundButtonProducto" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <!-- <item name="android:popupBackground">#DFFFFFFF</item>-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SelectableItemBackgroundTextDark" parent="Button">
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:layout_weight">0.5</item>-->
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrincipal</item>
    </style>

    <style name="SelectableButton" parent="Button">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">@drawable/edit_text</item>
        <!-- <item name="android:background">?attr/selectableItemBackground</item>-->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColorHint">@color/colorWhiteAlpha</item>
        <item name="android:textColor">@color/colorWhiteAlpha</item>
    </style>

    <style name="editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/edit_text_white</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <!--<item name="android:textSize">@dimen/text_size_edt</item>
        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="editText_style.area" parent="editText_style">
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="textViewProductos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_size_productos</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding_boton</item>
        <item name="android:paddingRight">@dimen/padding_boton</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:textSize">@dimen/text_size_tvw</item>-->
        <!--<item name="android:textColor">@color/colorBlackAlphaHint</item>-->
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textViewFiltro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:textSize">@dimen/text_size_tvw</item>-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:alpha">0.6</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="linearLayout_vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="linearLayout_vertical_edt" parent="linearLayout_vertical">
        <item name="android:layout_weight">3</item>
    </style>

    <style name="linearLayout_horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="spinner_style" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteAlpha</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBoton</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.SearchView" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@drawable/edit_text</item>
        <!-- Background for the actions section (e.g. voice, submit)
        <item name="submitBackground">@drawable/gradient_filtro</item>-->
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="queryHint">@string/search</item>
        <item name="android:inputType">number</item>
        <!-- Go/commit button icon -->
        <item name="goIcon">@null</item>
        <!-- Voice search button icon -->
        <item name="voiceIcon">@null</item>
        <!-- Commit icon shown in the query suggestion row -->
        <item name="commitIcon">@null</item>
        <!-- Layout for query suggestion rows -->
        <item name="suggestionRowLayout">@null</item>
        <!-- note that this is how you stye your hint icon -->
        <item name="searchHintIcon">@drawable/ic_search_white_alpha</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>
</resources>
